<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/BACKGROUND"
    tools:context=".PlayMusicActivity">

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/tv_SongName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên bài hát"
        style="@style/TEXT"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="40sp"/>

    <Button
        android:id="@+id/btnPrev"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text=""
        android:textSize="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:drawableLeft="@drawable/baseline_skip_previous_24"
        android:backgroundTint="@color/music"/>

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="185dp"
        android:layout_marginBottom="30dp"
        android:text=""
        android:textSize="15dp"
        android:drawableLeft="@drawable/baseline_pause_24"
        android:backgroundTint="@color/music"/>

    <Button
        android:id="@+id/btnFavorite"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="30dp"
        android:text=""
        android:textSize="15dp"
        android:drawableLeft="@drawable/baseline_favorite_24"
        android:backgroundTint="@color/music"/>


    <Button
        android:id="@+id/btnNext"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text=""
        android:textSize="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:drawableLeft="@drawable/baseline_skip_next_24"
        android:backgroundTint="@color/music"/>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="100dp"
        android:maxHeight="5dp"
        android:progressDrawable="@drawable/custom_seekbar"/>

    <TextView
        android:id="@+id/tvStart"
        android:text="00:00"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar"
        android:textColor="@color/music"/>

    <TextView
        android:id="@+id/tvEnd"
        android:text="00:00"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/seekBar"
        android:layout_above="@+id/seekBar"
        android:textColor="@color/music"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/disk"
        />

    <Button
        android:id="@+id/btn_share"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="255dp"
        android:layout_marginBottom="30dp"
        android:text="Button"
        android:drawableLeft="@drawable/baseline_share_24"
        android:backgroundTint="@color/music"/>


</RelativeLayout>
